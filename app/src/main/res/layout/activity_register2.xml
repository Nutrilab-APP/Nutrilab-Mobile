<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:orientation="vertical"
    android:paddingHorizontal="15dp"
    android:paddingTop="20dp"
    tools:context=".Register2Activity"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/nbold"
        android:text="Fill Your Body Data"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/nregular"
        android:text="Please fill in the data below as accurately as possible so that the nutritional calculations are more accurate"
        android:textColor="@color/white"
        android:textSize="15sp" />
    <Spinner
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="15dp"/>

    <EditText
        android:id="@+id/editText_birth_date"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="15dp"
        android:hint="Birth Date"
        android:focusable="false"
        android:clickable="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Allergies" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="15dp"
        android:hint="Height" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Weight" />

    <Spinner
        android:id="@+id/bloodtypes"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="15dp"
        android:autofillHints="Bloodtypes"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/nbold"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>