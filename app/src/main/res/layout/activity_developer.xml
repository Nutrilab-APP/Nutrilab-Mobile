<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DeveloperActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:text="Team Nutrilab"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="16dp"
        android:background="@drawable/custom_background2"
        android:elevation="20dp">

        <ImageView
            android:id="@+id/img_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="6dp"
            android:src="@drawable/gilang" />

        <TextView
            android:id="@+id/gilang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/img_1"
            android:text="Gilang Nur Rizki"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/npm_gilang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gilang"
            android:layout_marginVertical="3dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/img_1"
            android:text="22552011037"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/role_gilang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/npm_gilang"
            android:layout_marginVertical="3dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/img_1"
            android:text="Front-End"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="16dp"
        android:background="@drawable/custom_background2"
        android:elevation="20dp">

        <ImageView
            android:id="@+id/img_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="6dp"
            android:src="@drawable/aqilm" />

        <TextView
            android:id="@+id/aqil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/img_2"
            android:text="Aqil Muhammad Fachrezi"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/npm_aqil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/aqil"
            android:layout_marginVertical="3dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/img_2"
            android:text="22552011065"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/role_aqil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/npm_aqil"
            android:layout_marginVertical="3dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/img_2"
            android:text="Front-End"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="16dp"
        android:background="@drawable/custom_background2"
        android:elevation="20dp">

        <ImageView
            android:id="@+id/img_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="6dp"
            android:src="@drawable/gerry" />

        <TextView
            android:id="@+id/gerry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/img_3"
            android:text="Gerry Desrian"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/npm_gerry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gerry"
            android:layout_marginVertical="3dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/img_3"
            android:text="22552011036"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/role_gerry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/npm_gerry"
            android:layout_marginVertical="3dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/img_3"
            android:text="Back-End"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="26dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="15dp"
        android:fontFamily="@font/bregular"
        android:layout_marginTop="4dp"
        android:text="Nutrilab 2024"
        android:textSize="20sp" />
</LinearLayout>