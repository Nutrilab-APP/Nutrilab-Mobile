<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/teal_green_light"
                android:endColor="@color/teal_green"
                android:angle="45" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/teal_green"
                android:endColor="@color/teal_green_light"
                android:angle="45" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>
